<reactiveUi:ReactiveWindow x:TypeArguments="word:GameViewModel" x:Class="Slingo.GameWindow"
                           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                           xmlns:local="clr-namespace:Slingo"
                           xmlns:reactiveUi="http://reactiveui.net"
                           xmlns:word="clr-namespace:Slingo.Game.Word"
                           xmlns:game="clr-namespace:Slingo.Game"
                           mc:Ignorable="d"
                           Title="GameWindow" Height="450" Width="800"
                           Background="Purple"
                           AllowsTransparency="False">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <game:TeamControl x:Name="Team1Control" Grid.Column="0"/>
        <game:TeamControl x:Name="Team2Control" Grid.Column="2"/>
    </Grid>
</reactiveUi:ReactiveWindow>
