<reactiveUi:ReactiveUserControl x:TypeArguments="input:InputViewModel" x:Class="Slingo.Admin.WordGameControl.InputControl"
                                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                                xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                                xmlns:local="clr-namespace:Slingo.WordGame"
                                xmlns:reactiveUi="http://reactiveui.net"
                                xmlns:input="clr-namespace:Slingo.Admin.WordGameControl"
                                mc:Ignorable="d" 
                                d:DesignHeight="450" d:DesignWidth="800">
    <UniformGrid Rows="1" Height="40">
       
        <TextBox Grid.Column="1" x:Name="WordTextBox" Margin="5,0" FontSize="20"/>

        <CheckBox Grid.Row="1" Grid.Column="1" Content="Accepted" VerticalAlignment="Center" x:Name="IsAcceptedCheckBox" Margin="5,0"></CheckBox>

        <Button Grid.Row="2" Grid.Column="1" Content="Submit" Margin="5,0"></Button>

    </UniformGrid>
</reactiveUi:ReactiveUserControl>
