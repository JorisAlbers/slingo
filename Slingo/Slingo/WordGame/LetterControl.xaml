<reactiveUi:ReactiveUserControl x:TypeArguments="local:LetterViewModel" x:Class="Slingo.WordGame.LetterControl"
                                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                                xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                                xmlns:local="clr-namespace:Slingo.WordGame"
                                xmlns:reactiveUi="http://reactiveui.net"
                                mc:Ignorable="d" 
                                d:DesignHeight="450" d:DesignWidth="800">
    <Border x:Name="Border" BorderBrush="Gray" BorderThickness="2" CornerRadius="2"
            VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Viewbox StretchDirection="DownOnly" Stretch="Uniform">
            <TextBlock x:Name="LetterTextBlock" HorizontalAlignment="Center"/>
        </Viewbox>
    </Border>
</reactiveUi:ReactiveUserControl>
