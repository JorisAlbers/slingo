<reactiveUi:ReactiveUserControl x:TypeArguments="local:LetterViewModel" x:Class="Slingo.WordGame.LetterControl"
                                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                                xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                                xmlns:local="clr-namespace:Slingo.WordGame"
                                xmlns:reactiveUi="http://reactiveui.net"
                                mc:Ignorable="d" 
                                d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Border x:Name="OuterBorder" BorderBrush="Gray" BorderThickness="1" CornerRadius="10"
                VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Border x:Name="InnerBorder" CornerRadius="100" Margin="2"/>

        </Border>
        <Viewbox>
            <TextBlock x:Name="LetterTextBlock" HorizontalAlignment="Center" Foreground="White"/>
        </Viewbox>
    </Grid>

    
</reactiveUi:ReactiveUserControl>
