<reactiveUi:ReactiveUserControl x:TypeArguments="local:BingoBallViewModel" x:Class="Slingo.Bingo.BallControl"
                                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                                xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                                xmlns:local="clr-namespace:Slingo.Bingo"
                                xmlns:reactiveUi="http://reactiveui.net"
                                mc:Ignorable="d" 
                                d:DesignHeight="100" d:DesignWidth="100">
    <Grid>
        <Ellipse>
            <Ellipse.Fill>
                <LinearGradientBrush EndPoint="0.128,0.166" StartPoint="0.908,0.752">
                    <GradientStop Color="#FF00021D" Offset="0.055"/>
                    <GradientStop Color="#FF3C56AD" Offset="1"/>
                </LinearGradientBrush>
            </Ellipse.Fill>

        </Ellipse>

        <Viewbox>
            <TextBlock x:Name="NumberTextBlock" 
                       HorizontalAlignment="Stretch"
                       Foreground="White" 
                       Margin="5">
            </TextBlock>
        </Viewbox>
    </Grid>
</reactiveUi:ReactiveUserControl>
