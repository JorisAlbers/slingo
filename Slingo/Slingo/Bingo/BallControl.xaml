<reactiveUi:ReactiveUserControl x:TypeArguments="local:BingoBallViewModel" x:Class="Slingo.Bingo.BallControl"
                                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                                xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                                xmlns:local="clr-namespace:Slingo.Bingo"
                                xmlns:reactiveUi="http://reactiveui.net"
                                mc:Ignorable="d" 
                                d:DesignHeight="100" d:DesignWidth="100">
   <Viewbox Stretch="Fill">
        <Grid>
            <Ellipse VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <Ellipse.Fill>
                    <LinearGradientBrush EndPoint="0.128,0.166" StartPoint="0.908,0.752">
                        <GradientStop x:Name="SecondaryColorGradientStop" Offset="0.055" Color="Black"/>
                        <GradientStop x:Name="PrimaryColorGradientStop" Offset="1" Color="#FF3C56AD"/>
                    </LinearGradientBrush>
                </Ellipse.Fill>
            </Ellipse>


            <Polygon x:Name="TopMatchpointRectangle" 
                 Points="3,3 7.5,5, 12,3" 
                 Stroke="Red" 
                 Fill="Red" 
                 VerticalAlignment="Top"
                 HorizontalAlignment="Center"
                 Margin="0,1,0,0"
                 />

            <Polygon x:Name="BottomMatchpointRectangle" 
                     Points="3,5 7.5,3, 12,5" 
                     Stroke="Red"
                     Fill="Red" 
                     VerticalAlignment="Bottom"
                     HorizontalAlignment="Center"
                     Margin="0,0,0,3.5"
            />

            <Ellipse x:Name="Fill1">
            <Ellipse.Fill>
                <LinearGradientBrush EndPoint="0.292,0.891" StartPoint="0.744,0.027">
                    <GradientStop Offset="0.314" Color="#d1e045"/>
                    <GradientStop Offset="0.35" Color="Transparent"/>
                </LinearGradientBrush>
            </Ellipse.Fill>
        </Ellipse>

        <Ellipse x:Name="Fill2">
            <Ellipse.Fill>
                <LinearGradientBrush EndPoint="0.515,0.947" StartPoint="0.521,-0.029">
                    <GradientStop Offset="0.547" Color="#d1e045"/>
                    <GradientStop Offset="0.641" Color="Transparent"/>
                </LinearGradientBrush>
            </Ellipse.Fill>
        </Ellipse>

        <Ellipse x:Name="Fill3">
            <Ellipse.Fill>
                <LinearGradientBrush EndPoint="0.693,0.915" StartPoint="0.343,0.003">
                    <GradientStop Offset="0.746" Color="#d1e045"/>
                    <GradientStop Offset="0.801" Color="Transparent"/>
                </LinearGradientBrush>
            </Ellipse.Fill>
        </Ellipse>

        <Ellipse x:Name="Fill4">
            <Ellipse.Fill>
                <LinearGradientBrush EndPoint="0.767,1.05" StartPoint="0.343,0.003">
                    <GradientStop Offset="0.727" Color="#d1e045"/>
                    <GradientStop Offset="1" Color="#FFD1E045"/>
                </LinearGradientBrush>
            </Ellipse.Fill>
        </Ellipse>

            <DockPanel Height="18"
                       Width="13"
                       Margin="5">
                <TextBlock x:Name="TextTextBlock" 
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Foreground="White">
                </TextBlock>
            </DockPanel>

            <Ellipse x:Name="FlashEllipse" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" IsEnabled="False">
                <Ellipse.Fill>
                    <SolidColorBrush x:Name="Brushy" Color="Transparent"></SolidColorBrush>
                </Ellipse.Fill>

                <Ellipse.Style>
                    <Style TargetType="{x:Type Ellipse}">
                        <Setter Property="IsEnabled" Value="False"/>
                        <Style.Triggers>
                            <Trigger Property="IsEnabled" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard Name="FlashStoryboard">
                                        <Storyboard>
                                            <ColorAnimation 
                                                Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                From="Transparent" 
                                                To="White"
                                                Duration="0:0:0:0.2"
                                                AutoReverse="True"/>

                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <StopStoryboard BeginStoryboardName="FlashStoryboard"></StopStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Ellipse.Style>

            </Ellipse>
        </Grid>
    </Viewbox>
   
</reactiveUi:ReactiveUserControl>
